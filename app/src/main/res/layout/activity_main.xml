<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rel_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/pencil"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_draw_24" />

        <ImageButton
            android:id="@+id/arrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/pencil"
            android:src="@drawable/ic_baseline_arrow_upward_24" />

        <ImageButton
            android:id="@+id/rect"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/arrow"
            android:src="@drawable/ic_baseline_crop_square_24" />

        <ImageButton
            android:id="@+id/ellipse"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/rect"
            android:src="@drawable/ic_baseline_circle_24" />

        <ImageButton
            android:id="@+id/palette"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/ellipse"
            android:src="@drawable/ic_baseline_color_lens_24" />

        <ImageButton
            android:layout_toRightOf="@id/palette"
            android:id="@+id/ib_brush"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_brush_24" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_paint_colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/rel_layout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/red"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/red"
            android:onClick="paintclicked"
            android:src="@drawable/pallet_normal"
            android:tag="@color/red" />

        <ImageButton
            android:id="@+id/green"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/green"
            android:onClick="paintclicked"
            android:src="@drawable/pallet_normal"
            android:tag="@color/green" />

        <ImageButton
            android:id="@+id/blue"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/blue"
            android:onClick="paintclicked"
            android:src="@drawable/pallet_normal"
            android:tag="@color/blue" />

        <ImageButton
            android:id="@+id/black"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:background="@color/black"
            android:onClick="paintclicked"
            android:src="@drawable/pallet_normal"
            android:tag="@color/black" />

    </LinearLayout>

<com.android.drawingapplication.DrawingView
    android:layout_width="match_parent"
    android:id="@+id/canvasbit"
    android:layout_below="@id/ll_paint_colors"
    android:layout_height="match_parent"/>

</RelativeLayout>